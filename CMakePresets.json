{
  "version": 6,
  "cmakeMinimumRequired": { "major": 3, "minor": 20 },
  "configurePresets": [
    {
      "name": "dev",
      "displayName": "Dev (Ninja, RelWithDebInfo)",
      "generator": "Ninja",
      "binaryDir": "build/dev",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "LDSC_ENABLE_OPENMP": "ON",
        "LDSC_ENABLE_IPO": "OFF"
      }
    },
    {
      "name": "release",
      "displayName": "Release (portable)",
      "generator": "Ninja",
      "binaryDir": "build/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "LDSC_ENABLE_OPENMP": "ON",
        "LDSC_ENABLE_IPO": "ON",
        "LDSC_PORTABLE_LINUX": "ON",
        "LDSC_MSVC_STATIC_CRT": "OFF"
      }
    },
    {
      "name": "macos-release",
      "displayName": "macOS Release (13.0 min target)",
      "inherits": "release",
      "binaryDir": "build/macos-release",
      "cacheVariables": {
        "CMAKE_OSX_DEPLOYMENT_TARGET": "13.0"
      }
    },
    {
      "name": "windows-release-staticcrt",
      "displayName": "Windows Release (static CRT)",
      "inherits": "release",
      "binaryDir": "build/win-release-staticcrt",
      "cacheVariables": {
        "LDSC_MSVC_STATIC_CRT": "ON"
      }
    }
  ],
  "buildPresets": [
    { "name": "dev", "configurePreset": "dev" },
    { "name": "release", "configurePreset": "release" },
    { "name": "macos-release", "configurePreset": "macos-release" },
    { "name": "windows-release-staticcrt", "configurePreset": "windows-release-staticcrt" }
  ],
  "packagePresets": [
    { "name": "release", "configurePreset": "release" }
  ]
}

